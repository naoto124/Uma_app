<h1><%= @uma.name%>詳細ページ</h1>

<div class="col-12 col-md-6 col-sm-12 prof"> 
  <table class="uma_prof table">
    <tbody>
      <tr class="birthday">
        <th>
        生年月日
        </th>
        <td>
         <%= @birth%>
        </td>
      </tr>

      <tr>
        <th>
          性別・歳
        </th>
        <td>
          <%= @sex_age%>
        </td>
      </tr>
      <tr>

        <th>
          調教師
        </th>
        <td>
          <%= @uma_info[0]%>
        </td>
      </tr>
      <tr>

        <th>
          馬主
        </th>
        <td>
          <%= @uma_info[1]%>
        </td>
      </tr>

      <tr>
        <th>
          生産者
        </th>
        <td>
          <%= @uma_info[2]%>
        </td>
      </tr>

      <tr>
        <th>
          生産地
        </th>
        <td>
          <%= @uma_info[3]%>
        </td>
      </tr>

      <tr>
        <th>
          成績
        </th>
        <td>
          <%= @uma_info[4]%>
        </td>
      </tr>

      <tr>
        <th>
          賞金
        </th>
        <td>
          <%= @uma_info[5]%>
        </td>
      </tr>

    </tbody>
  </table>
</div>


<span class="table-responsive-sm md lg">
  <table class="uma_race_info table">
    <thead>
      <tr class ="col-xs-3 col-ms-3 col-md-4 col-lg-6">
        <% race_title.each do |title|%>
        <th class ="col-xs-1"><%=title%></th>
        <%end%>
      </tr>
    </thead>
    <tbody>
      <%for m in 0..30 do%>
          <tr class ="col-xs-3 col-ms-3 col-md-4 col-lg-6">
            <%for i in 0..21 do%>
              <% if i == 3%>
                <td>
                  <a href="/uma_show/uma_detail/race_show/<%= @table[22][m]%>" name="<%=@table[22][m]%>">
                    <%= @table[i][m]%>
                  </a>
                </td>
              <% elsif %>
                  <td>
                    <%= @table[i][m]%>
                  </td>
              <%end%>
            <%end%>
          </tr>
          <%end%>
    </tbody>
  </table>
</span>