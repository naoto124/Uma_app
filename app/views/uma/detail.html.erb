  <table class="uma_race_info table">
    <thead>
      <tr class ="col-xs-3 col-ms-3 col-md-4 col-lg-6">
        <% race_title.each do |title|%>
        <th class ="col-xs-1"><%=title%></th>
        <%end%>
      </tr>
    </thead>
    <tbody>
      <%@new_race_info.each do |r|%>
    <tr class ="col-xs-3 col-ms-3 col-md-4 col-lg-6">
      <% for i in 0..21 do%>
        <td><%=r[i]%></td>
      <%end%>
    </tr>
    <%end%>
