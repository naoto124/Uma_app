<!DOCTYPE html>
<html>
  <head>
    <title>UmaApuri</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application'%>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </head>

<body>
<nav class="navbar navbar-expand-sm navbar-dark bg-dark">
  <h1 class="navbar-brand">
    <%= link_to("Uma",root_path)%>
  </h1>
      <span class="navbar-nav  text-secondary ml-2">

          <% if logged_in? %>
            <p class="nav-item mr-2"><%= @current_user.name%>:</p>
            <div class="nav-item"><%= link_to("ログアウト",logout_path,method: :delete)%></div>

          <% else %>
          <div class="nav-item mr-2"><%= link_to("新規登録",singup_path) %></div>
          <div class="nav-item"><%= link_to("ログイン",login_path)%></div>
          <%end%>

      </span>
    <% if logged_in? %>
      <span style = "margin-left: auto;">
        <p><a href="<%=race_index_next_path%>">今週のレース</a></p>
        <p><a href="<%=couse_index_path%>">コース</a></p>
      </span>
    <%end%>
</nav>


<%= yield %>
</body>
</html>
